{
  "name": "payment-transactions-desktop",
  "version": "1.0.0",
  "description": "Payment Transactions System - Desktop Application",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kairenq/payment_transactions.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir"
  },
  "author": "Payment Transactions Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {},
  "build": {
    "appId": "com.payment-transactions.app",
    "productName": "Payment Transactions",
    "copyright": "Copyright Â© 2024",
    "publish": null,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js"
    ],
    "win": {
      "target": "nsis",
      "certificateFile": null,
      "certificatePassword": null,
      "sign": null
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Payment Transactions"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.finance"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Finance"
    }
  }
}
